{% extends 'base.html.twig' %}

{% from "_utils.html.twig" import link %}

{% block title %}
	{{ actor.fullName }}
{% endblock %}

{% block body %}
	<main class="container">
		<h1>{{ actor.fullName }}</h1>
		<p>Date de naissance: {{ actor.birthDate|date("d/m/Y") }}</p>
		<div>
			<h2>Programs</h2>
			<ul>
				{% for program in actor.programs %}
					<li>{{ link(program.title, path('program_show', {slug: program.slug})) }}</li>
				{% endfor %}
			</ul>
		</div>
	</main>
{% endblock %}
