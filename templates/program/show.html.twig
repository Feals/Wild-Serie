{% extends 'base.html.twig' %}

{% from "_utils.html.twig" import link %}

{% block title %}
	{{ program.title }}
{% endblock %}

{% block body %}
	<main class="container">
		{{ link("Retour à la liste des programmes", path('program_index')) }}
		<div class="media">
			<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>
			</div>
		</div>
		<div>
			<strong>Acteurs :</strong>
			<ul>
				{% for actor in program.actors %}
					<li>{{ link(actor.name, path('actor_show', {id: actor.id})) }}</li>
				{% else %}
					<li>Aucun acteur pour cette série</li>
				{% endfor %}
			</ul>
		</div>
		<div>
			<strong>Seasons :</strong>
			<ul>
				{% for season in program.seasons %}
					<li>
						{{ link("Saison " ~ season.number, path('program_season_show', {program: program.id, season: season.id})) }}
					</li>
				{% endfor %}
			</ul>
		</div>
	</main>
{% endblock %}
